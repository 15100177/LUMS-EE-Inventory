<p id="notice"><%= notice %></p>

<h1>Listing Components</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Model</th>
      <th>Quantity</th>
      <th>Detail</th>
      <th>Price</th>
      <th>Remarks</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @components.each do |component| %>
      <tr>
        <td><%= component.name %></td>
        <td><%= component.model %></td>
        <td><%= component.Quantity %></td>
        <td><%= component.Detail %></td>
        <td><%= component.price %></td>
        <td><%= component.remarks %></td>
        <td><%= component.user_id %></td>
        <td><%= link_to 'Show', component %></td>
        <td><%= link_to 'Edit', edit_component_path(component) %></td>
        <td><%= link_to 'Delete', component, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

